<div class="content grid">
  <div class="sidebar span-3">
    <input type="checkbox" class="sidebar-menu-toggle" id="sidebar-menu-toggle"<%= ' checked' if @path == 'index.md' %>>
    <h3>
      <label for="sidebar-menu-toggle" class="sidebar-menu-toggle-label">
        <%= inline_svg_tag 'caret-right.svg', class: 'open' %>
        <%= inline_svg_tag 'caret-down.svg', class: 'close' %>
      </label>
      <label for="sidebar-menu-toggle" class="sidebar-menu-toggle-title">
        Compendium <span>Menu</span>
      </label>
    </h3>
    <%= nav_tree @nav %>
  </div>
  <section class="page span-9">

    <h1><%= @title %></h1>

    <% if @subtitle.present? %>
      <p class="big"><%= @subtitle %></p>
    <% end %>

    <% if @notices.present? %>
      <% @notices.each do |notice_type| %>
        <%= render "notice_#{notice_type}" %>
      <% end %>
    <% end %>

    <%= @content %>

    <footer>
      <%= link_to "Edit this page", "https://github.com/dol-003/dol-003-web/edit/main/lib/compendium/#{@path}" %> on GitHub. Learn more about <a href="/contributing">contributing to the Compendium</a>.
    </footer>

  </section>
</div>

<%= inline_svg_tag 'link.svg', id: 'link-icon' %>
