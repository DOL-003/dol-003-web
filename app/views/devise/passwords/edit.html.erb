<div class="content grid">
  <section class="span-8">

    <h2>Change your password</h2>
    <p>Choose a new password for your account.</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form' }) do |form| %>

      <%= form.hidden_field :reset_password_token %>

      <%= render 'form_field', locals: {
        resource: resource,
        form: form,
        field_name: :password,
        field_type: :password_field,
        label: 'New password',
        options: { autofocus: true, autocomplete: 'new-password', class: 'text-input large' }
      } %>

      <%= render 'form_field', locals: {
        resource: resource,
        form: form,
        field_name: :password_confirmation,
        field_type: :password_field,
        label: 'Confirm new password',
        options: { autofocus: true, autocomplete: 'new-password', class: 'text-input large' }
      } %>

      <div class="actions">
        <%= form.submit 'Save password', class: 'button' %>
      </div>

    <% end %>

  </section>
</div>
