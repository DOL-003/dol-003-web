<div class="content grid">

  <section class="span-5">

    <h2>Modder sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>

      <%= render 'form_field', locals: {
        resource: resource,
        form: f,
        field_name: :email,
        field_type: :email_field,
        options: { autofocus: true, autocomplete: 'email', class: 'text-input large' }
      } %>

      <%= render 'form_field', locals: {
        resource: resource,
        form: f,
        field_name: :password,
        field_type: :password_field,
        options: { autocomplete: 'current-password', class: 'text-input large' }
      } %>

      <div class="actions">
        <%= f.submit 'Sign in', class: 'button' %>
        <%= link_to 'Sign up', new_registration_path(resource_name) %>
      </div>

      <% if devise_mapping.rememberable? %>
        <%= f.hidden_field :remember_me, value: true %>
      <% end %>

      <p class="addendum small">
        <%= link_to 'Forgot your password?', new_user_password_path %><br>
        <%= link_to 'Resend confirmation instructions', new_user_confirmation_path %>
      </p>

    <% end %>

  </section>

  <section class="span-6">
    <p class="big">Sign in to your account to update your public modder profile. Add photos, list the services you offer, and link to your shop and social media pages.</p>
    <p>Not registered yet? <%= link_to 'Sign up now', new_registration_path(resource_name) %>.</p>
  </section>

</div>
