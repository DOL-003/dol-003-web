<ul>
  <% locals[:tree].each do |item| %>
    <li>
      <%= link_to item[:title], item[:path] %>
      <% if item[:children].present? %>
        <input type="checkbox" class="menu-toggle" id="menu-toggle-<%= item[:path] %>">
        <label for="menu-toggle-<%= item[:path] %>">
          <%= inline_svg_tag 'plus.svg', class: 'open' %>
          <%= inline_svg_tag 'minus.svg', class: 'close' %>
        </label>
        <%= menu_tree(item[:children], item[:path]) %>
      <% end %>
    </li>
  <% end %>
</ul>
