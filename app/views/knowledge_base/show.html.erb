<div class="content grid">
  <div class="sidebar span-3">
    <%= menu_tree @menu %>
  </div>
  <section class="page span-9">
    <h1><%= @title %></h1>
    <% if @description.present? %>
      <p class="big"><%= @description %></p>
    <% end %>
    <%= @content %>
  </section>
</div>

<%= inline_svg_tag 'link.svg', id: 'link-icon' %>
